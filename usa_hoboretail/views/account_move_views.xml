<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_usa" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="work_order" attrs="{'invisible': [('move_type','not in', ['out_invoice','out_refund'])]}"/>
                <field name="work_order_date" attrs="{'invisible': [('move_type','not in', ['out_invoice','out_refund'])]}"/>
                <field name="sequence_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>