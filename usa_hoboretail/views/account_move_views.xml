<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_usa" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="work_order" attrs="{'invisible': [('move_type','not in', ['out_invoice','out_refund'])]}"/>
                <field name="work_order_date" attrs="{'invisible': [('move_type','not in', ['out_invoice','out_refund'])]}"/>
                <field name="sequence_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']" position="before">
                <group>
                    <field name="show_qty_report"/>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="files" string="Files">
                    <field name="file_ids">
                        <tree editable="bottom">
                            <field name="move_id" invisible="1"/>
                            <field name="file_name"/>
                            <field name="file" filename="file_name"/>
                            <field name="email"/>
                            <field name="attachment_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_tree_usa" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_partner_display_name'][2]" position="after">
                <field name="work_order"/>
                <field name="work_order_date"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter_usa" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="work_order" string="Work Order" filter_domain="[('work_order', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>

    <record id="action_invoice_mail_massive" model="ir.actions.server">
        <field name="name">Mail massive</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_wizard_invoice_partner()
        </field>
    </record>

</odoo>